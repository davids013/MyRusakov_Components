<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".L6_SpinnerActivity">

    <TextView
        android:id="@+id/hello_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6. Знакомство с выпадающим списком Spinner"
        android:padding="8dp"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_gravity="top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#c74"
        android:background="#15f"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner1"
        android:entries="@array/array_for_spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/hello_spinner"/>

    <Button
        android:id="@+id/buttonBackToL5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to L5"
        android:onClick="clickBackToL5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/buttonNextToL7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Next Lesson 7"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonBackToL5"/>

    <TextView
        android:id="@+id/textView_for_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose color"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner1"
        android:layout_marginTop="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>